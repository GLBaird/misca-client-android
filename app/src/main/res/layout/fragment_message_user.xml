<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_margin="@dimen/list_margin">

    <TextView
        android:id="@+id/message_list_item_time"
        style="@style/QMessageTimeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_gravity="center_vertical"
        android:text="14:55"/>

    <TextView
        android:id="@+id/message_list_item_text"
        style="@style/QMessageText"
        android:textColor="@color/colorChatTextWhite"
        android:background="@drawable/rounded_box_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="right"
        android:text="Message from the user."/>

    <View
        android:id="@+id/callout"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:background="@drawable/triangle_right_blue" />

</LinearLayout>


